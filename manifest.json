{
  "manifest_version": 2,
  "name": "TrackPack - Track Your Packages easily",
  "short_name": "TrackPack",
  "description": "Manage all your packages from different delivery services in one app.",
  "version": "0.2.8",
  "minimum_chrome_version": "23",
  "permissions" : [
    "storage",
    "http://nolp.dhl.de/*",
    "https://www.myhermes.de/*",
    "http://www.trackingex.com/fedex-tracking/*",
    "http://wwwapps.ups.com/ietracking/*",
    "http://fonts.googleapis.com/*"
    ],
  "icons": { "128": "assets/app_icon.png"
  },
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  }
}
